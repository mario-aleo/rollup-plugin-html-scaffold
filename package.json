{
  "name": "rollup-plugin-html-scaffold",
  "version": "0.1.3",
  "description": "HTML template for Rollup",
  "keywords": [
    "rollup",
    "rollup-plugin",
    "html",
    "scaffold",
    "template",
    "injection"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier '**/*.js' --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier '**/*.js' --write",
    "build": "rollup -c rollup.config.js",
    "prepublish": "npm run format && npm run build"
  },
  "repository": "https://github.com/mario-aleo/rollup-plugin-html-scaffold.git",
  "author": "Mario Aleo <mario.aleo@golsat.com.br>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@open-wc/eslint-config": "^2.0.2",
    "@open-wc/prettier-config": "^0.1.7",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "rollup": "^1.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "peerDependencies": {
    "rollup": ">=1.1.2"
  }
}
